<%= form_with(model: hour, local: true) do |form| %>
  <% if hour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hour.errors.count, "error") %> prohibited this hour from being saved:</h2>

      <ul>
        <% hour.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, placeholder:"name", class: "border-top-0 border-left-0 border-right-0 pt-2 pb-2"%><br>
    <%= form.number_field :amount, placeholder:"amount", class: "border-0 pt-2 pb-2" %>
    <%= form.label :group %>
    <%= form.select(:group_id, @group_options, { include_blank: true }) %>
  </div>
  

  <div class="actions text-center">
    <%= form.submit%><br><br>
    <%= link_to 'Back', hours_path%>
  </div>
  
<% end %>
